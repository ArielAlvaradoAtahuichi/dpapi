{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "strict": true,
      "outDir": "dist",
      "declaration": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "exactOptionalPropertyTypes": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "lib"
    ]
  }